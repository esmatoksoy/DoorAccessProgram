    <Window x:Class="WpfApp1.MainWindow"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
       Title="Door Access Control" Height="500" Width="900"
       MinWidth="800"
       MinHeight="450"
       Background="#F5F7FA">
    <Window.Resources>
        <!-- Modern Button Style -->
        <Style TargetType="Button">
            <Setter Property="Background" Value="#1976D2" />
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#1565C0"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Padding" Value="8,10"/>
            <Setter Property="Margin" Value="0,4,0,0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="6"
                                SnapsToDevicePixels="True">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"
                                              RecognizesAccessKey="True"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#2196F3"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#1565C0"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#B0BEC5"/>
                                <Setter Property="Foreground" Value="#ECEFF1"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        
        <!-- TextBox Style for Consistency -->
        <Style TargetType="TextBox">
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="Padding" Value="4"/>
            <Setter Property="Margin" Value="0,0,0,8"/>
            <Setter Property="BorderBrush" Value="#90CAF9"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="Background" Value="White"/>
        </Style>
        <!-- DataGrid Style for Modern Look -->
        <Style TargetType="DataGrid">
            <Setter Property="FontSize" Value="15"/>
            <Setter Property="RowBackground" Value="#E3F2FD"/>
            <Setter Property="AlternatingRowBackground" Value="#BBDEFB"/>
            <Setter Property="GridLinesVisibility" Value="None"/>
            <Setter Property="BorderBrush" Value="#90CAF9"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>
    </Window.Resources>
    <Grid Margin="20" Background="#F5F7FA">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Text="Door Access Control"
                   FontSize="28"
                   FontWeight="Bold"
                   FontFamily="Segoe UI"
                   Foreground="#1976D2"
                   Margin="0,-26,0,39"
                   Grid.ColumnSpan="3"/>

        <!-- Left Panel -->
        <StackPanel Orientation="Vertical" Grid.Column="0" Background="#E3F2FD" Margin="0,20,0,0" Grid.ColumnSpan="2" Grid.RowSpan="2">
            <TextBlock Text="Person ID:" FontSize="16" FontFamily="Century Gothic"  FontWeight="SemiBold"/>
            <TextBox x:Name="txtPersonID" TextChanged="txtPersonID_TextChanged" PreviewTextInput="txtPersonID_PreviewTextInput" DataObject.Pasting="txtPersonID_Pasting"/>
            <TextBlock Text="Person Name:" FontSize="16" FontFamily="Century Gothic"  FontWeight="SemiBold" Margin="0,0,0,2"/>
            <TextBox x:Name="txtPersonName" PreviewTextInput="txtPersonName_PreviewTextInput" DataObject.Pasting="txtPersonName_Pasting"/>
            <TextBlock Text="Access Date:" FontSize="16" FontFamily="Century Gothic"  FontWeight="SemiBold" Margin="0,0,0,2"/>
            <DatePicker x:Name="dpAccessTime" Margin="0,0,0,8"/>
            <TextBlock Text="Time (hh:mm):" FontFamily="Century Gothic"  FontSize="16" FontWeight="SemiBold" Margin="0,0,0,2"/>
            <TextBox x:Name="txtAccessOnlyTime" Width="120" MaxLength="5" PreviewTextInput="txtAccessOnlyTime_PreviewTextInput" DataObject.Pasting="txtAccessOnlyTime_Pasting"/>
            <StackPanel Orientation="Vertical" Margin="0,16,0,0">
                <Button Content="ADD" Click="Button_Click_Add"/>
                <Button Content="UPDATE" Click="Button_Click_Update"/>
                <Button Content="DELETE" Click="Button_Click_Delete"/>
                <Button Content="LIST ALL" Click="Button_Click_List"/>
                <Button Content="SEARCH" Click="Button_Click_Search"/>
                <Button Content="GRAPHICS"  Click="Button_Click_Graphics"/>
            </StackPanel>
        </StackPanel>

        <!-- DataGrid -->
        <!-- DataGrid (Row 1) -->
        <DataGrid x:Name="dgRecords"
           Grid.Column="2"
           Grid.Row="1"
           Margin="0,5,0,250"
           AutoGenerateColumns="True"
           IsReadOnly="True"
           SelectionMode="Single"
           SelectionChanged="dgRecords_SelectionChanged"
           MinHeight="200"
           MinWidth="300"/>

        <!-- Chart (Row 2, initially hidden) -->
        <lvc:CartesianChart x:Name="myChart"
                     Grid.Column="2"
                     Grid.Row="2"
                     Margin="0,0,0,-180"
                     Visibility="Collapsed"
                             Height="250"
                            />
    </Grid>
</Window>
